<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<TabPane fx:id="tabPane" prefHeight="400.0" prefWidth="772.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewController">
    <tabs>
        <Tab fx:id="Boggle" text="Boggle">
         <content>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="451.0" prefWidth="800.0">
                 <children>
                     <HBox fx:id="hBox2" AnchorPane.bottomAnchor="49.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="8.0">
                         <GridPane fx:id="gridPane" layoutX="6.0" layoutY="7.0" prefHeight="400.0" prefWidth="400.0">
                         </GridPane>
                        <TextArea fx:id="foundWordsField" prefWidth="200.0" text="Gevonden woorden:">
                            <HBox.margin>
                                <Insets left="30.0" />
                            </HBox.margin>
                        </TextArea>
                     </HBox>
                     <HBox layoutX="14.0" layoutY="316.0" prefHeight="31.0" prefWidth="744.0" fx:id="hBox" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
                         <children>
                             <Button text="Submit word" onAction="#submitWord"/>
                             <TextField prefHeight="31.0" prefWidth="113.0" fx:id="currentWordField" text="1">
                                 <HBox.margin>
                                     <Insets left="8.0" />
                                 </HBox.margin>
                             </TextField>
                         </children>
                     </HBox>
                 </children>
             </AnchorPane>
         </content>
        </Tab>
        <Tab fx:id="Settings" text="Settings">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="451.0" prefWidth="800.0">
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                            <Button text="Chance wordlist" onAction="#changeWordList"/>
                            <Button text="Show wordlist" onAction="#showWordList">
                                <VBox.margin>
                                    <Insets top="8.0" />
                                </VBox.margin>
                            </Button>
                            <TextArea fx:id="currentAllowedWordsField" text="Current allowed words:">
                                <VBox.margin>
                                    <Insets top="8.0" />
                                </VBox.margin>
                            </TextArea>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
